<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="12dp"
    tools:context=".Fragment.DoanhThuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btntuNgay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Từ Ngày"
            android:textColor="@color/white"
            android:background="@color/levente"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="YYYY/MM/DD"
            android:id="@+id/edttuNgay"
            android:layout_weight="2"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btndenNgay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đến Ngày"
            android:textColor="@color/white"
            android:background="@color/levente"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="YYYY/MM/DD"
            android:id="@+id/edtdenNgay"
            android:layout_weight="2"
            android:textSize="18dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btndoanhThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/levente"
        android:text="Doanh thu"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtdoanhThu"
        android:textSize="18sp"
        android:text="Doanh thu: "
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />
</LinearLayout>